
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TOTO Historical Results
    match /totoResults/{drawId} {
      allow read: if true;
      allow write: if request.resource.data.userId == "mAvLawNGpGdKwPoHuMQyXlKpPNv1"; // Specific admin UID
    }

    // Tool Predictions (Back-testing predictions made by specific tools for historical draws)
    match /toolPredictions/{predictionId} {
      allow read: if true;
      allow create: if true; // System can create these. Review for production.
      allow update, delete: if false;
    }

    // User Favorite Tools
    match /userToolFavorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Smart Pick AI Results
    match /smartPickResults/{resultId} {
      allow create: if request.resource.data.userId != null;
      allow read: if resource.data.userId != null; // Allows server action to read if userId is present
      allow update, delete: if false;
    }

    // Official Tool Predictions (Generated by Admin for an upcoming draw)
    match /officialToolPredictions/{docId} { // docId could be toolId_drawId
      allow read: if true; // All users can read official predictions
      // Only admins can create, update, or delete official predictions.
      // Assumes admin status is verified by 'isAdmin' custom claim on ID token.
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // App Settings (like current draw info)
    match /appSettings/currentDrawInfo {
      allow read: if true;
      allow write: if request.resource.data.userId == "mAvLawNGpGdKwPoHuMQyXlKpPNv1"; // Specific admin UID
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
