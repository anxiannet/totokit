rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TOTO Historical Results
    // Allow anyone to read historical results.
    // Only allow writes if the user is authenticated and has an 'isAdmin' custom claim.
    // This rule is strict and best enforced by an Admin SDK operation (e.g., Cloud Function).
    match /totoResults/{drawId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Tool Predictions (Predictions made by specific tools for historical draws)
    // Allow anyone to read these predictions.
    // Writes are currently initiated by a Server Component; for now, allow creation.
    // For production, consider if a more secure, authenticated (Admin SDK) process should write this.
    match /toolPredictions/{predictionId} {
      allow read: if true;
      allow create: if true; // Allows Server Component to save predictions via Server Action (Client SDK)
      allow update, delete: if false; // Or restrict to admin: request.auth != null && request.auth.token.isAdmin == true;
    }

    // User Favorite Tools
    // Users can only read and write their own favorite tools document.
    // This rule relies on a fresh auth context for the server action.
    match /userToolFavorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Smart Pick AI Results
    // Allow authenticated users to create their own smart pick results if userId in doc matches.
    // (This rule was adjusted to work with server actions where request.auth might be null initially)
    match /smartPickResults/{resultId} {
      allow create: if request.resource.data.userId != null; // Allows create if triggered by an authenticated user who provides their UID
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Default deny all other access to prevent unintended access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
