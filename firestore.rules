
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TOTO Historical Results
    // Allow anyone to read historical results.
    // Only allow writes if the user is authenticated and has an 'isAdmin' custom claim.
    // This rule will be checked by the Cloud Function before it performs Admin SDK writes.
    match /totoResults/{drawId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
      // Data validation for structure should happen in the Cloud Function.
    }

    // Tool Predictions (Predictions made by specific tools for historical draws)
    // Allow anyone to read these predictions.
    // System can create these. Review for production (e.g., only trusted server/admin).
    match /toolPredictions/{predictionId} {
      allow read: if true;
      allow create: if true; // Or restrict to admin: request.auth != null && request.auth.token.isAdmin == true
      allow update, delete: if false; // Or allow admin
    }

    // User Favorite Tools
    // Users can only read and write their own favorite tools document.
    match /userToolFavorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Smart Pick AI Results
    // Allow authenticated users to create their own smart pick results if the userId in doc matches.
    match /smartPickResults/{resultId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Keep restricted for now
    }

    // Default deny all other access to prevent unintended access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

    