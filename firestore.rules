
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TOTO Historical Results
    // Allow anyone to read historical results.
    // WARNING: Write rule below is temporarily relaxed for development/testing.
    // For production, admin-only writes should be enforced via Admin SDK
    // in a secure backend environment (e.g., Cloud Function or API route).
    match /totoResults/{drawId} {
      allow read: if true;
      allow write: if true; // TEMPORARILY RELAXED - SECURE FOR PRODUCTION
    }

    // Tool Predictions (Predictions made by specific tools for historical draws)
    // System can create these. Review for production.
    match /toolPredictions/{predictionId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }

    // User Favorite Tools
    // Users can only read and write their own favorite tools document.
    match /userToolFavorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Smart Pick AI Results
    // Allow authenticated users to create their own smart pick results if userId in doc matches.
    match /smartPickResults/{resultId} {
      allow create: if request.resource.data.userId != null; // Simplified: if userId is present, allow.
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Default deny all other access to prevent unintended access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
