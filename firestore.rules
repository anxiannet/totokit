
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // App Settings - Current Draw Information
    // Allow anyone to read.
    // Only allow writes if the document's userId field matches the specific admin UID.
    match /appSettings/currentDrawInfo {
      allow read: if true;
      allow write: if request.resource.data.userId != null && request.resource.data.userId == "mAvLawNGpGdKwPoHuMQyXlKpPNv1";
    }

    // TOTO Historical Results
    // Allow anyone to read historical results.
    // Only allow writes if the document's userId field matches the specific admin UID.
    match /totoResults/{drawId} {
      allow read: if true;
      allow write: if request.resource.data.userId != null && request.resource.data.userId == "mAvLawNGpGdKwPoHuMQyXlKpPNv1";
    }

    // Tool Predictions (Predictions made by specific tools for historical draws)
    // System can create these. Review for production.
    // For now, allow create by anyone (assuming server action is trusted source).
    // Read can be public.
    match /toolPredictions/{predictionId} {
      allow read: if true;
      allow create: if true; // System/Server Action can create these.
      allow update, delete: if false; // Or set to admin only: request.auth != null && request.auth.token.isAdmin == true;
    }

    // User Favorite Tools
    // Users can only read and write their own favorite tools document.
    match /userToolFavorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Smart Pick AI Results
    // Allow authenticated users to create their own smart pick results if the doc's userId matches their auth.uid.
    match /smartPickResults/{resultId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Default deny all other access to prevent unintended access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
