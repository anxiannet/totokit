
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TOTO Historical Results
    match /totoResults/{drawId} {
      allow read: if true;
      // Admin UID: mAvLawNGpGdKwPoHuMQyXlKpPNv1
      allow write: if request.resource.data.userId == 'mAvLawNGpGdKwPoHuMQyXlKpPNv1';
    }

    // Tool Predictions (Predictions made by specific tools for historical draws)
    match /toolPredictions/{predictionId} {
      allow read: if true;
      allow create: if true; // System can create these. Review for production.
      allow update, delete: if false;
    }

    // User Favorite Tools
    // Users can only read and write their own favorite tools document.
    match /userToolFavorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Smart Pick AI Results
    match /smartPickResults/{resultId} {
      allow create: if request.resource.data.userId != null; // Allows create if triggered by an authenticated user who provides their UID
      // Allow read if the document has a userId.
      // The server action getUserSmartPickResults filters by a specific userId.
      allow read: if resource.data.userId != null;
      allow update, delete: if false;
    }

    // App Settings (e.g., current draw info)
    match /appSettings/currentDrawInfo {
      allow read: if true;
      // Admin UID: mAvLawNGpGdKwPoHuMQyXlKpPNv1
      allow write: if request.resource.data.userId == 'mAvLawNGpGdKwPoHuMQyXlKpPNv1';
    }

    // Default deny all other access to prevent unintended access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
