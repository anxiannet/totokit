
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to totoResults
    match /totoResults/{drawId} {
      allow read: if true;
      // Allow write only if the user is authenticated (example)
      // For admin panel, you might need more specific rules or use Admin SDK
      allow write: if request.auth != null; // Or true for open development
    }

    // Allow public read access to toolPredictions
    match /toolPredictions/{predictionId} {
      allow read: if true;
      // Allow write only if the user is authenticated (example)
      allow write: if request.auth != null; // Or true for open development
    }

    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
