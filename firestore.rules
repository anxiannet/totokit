
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // TOTO Results Collection
    // Allow public read access.
    // Disallow all client-side writes. Writes should be managed by a trusted backend process or secure Server Actions.
    match /totoResults/{drawId} {
      allow read: if true;
      allow write: if false;
    }

    // Tool Predictions Collection
    // Allow public read access if these predictions are meant to be public.
    // Disallow all client-side writes. Writes should be managed by a trusted backend process or secure Server Actions.
    match /toolPredictions/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Default rule: Deny all reads and writes to any other collections/documents not explicitly matched.
    // This is crucial for security.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
