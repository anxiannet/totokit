
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for historical TOTO results
    match /totoResults/{drawId} {
      allow read: if true;
      // IMPORTANT: For production, ensure only authenticated admins can write.
      // This rule assumes your server actions for syncing run with admin privileges
      // or that you've set up custom claims for an admin user.
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // toolPredictions might be read by users if you build features around them.
    // Writes should be controlled, ideally by server actions that might have their own auth checks.
    // For now, restricting write to admins.
    match /toolPredictions/{docId} {
      allow read: if true; // Or restrict if these are not meant to be public
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Users can only read and write their own favorites list.
    match /userToolFavorites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
